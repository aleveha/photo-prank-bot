{
	"name": "photo-prank-bot",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "bun run typecheck && NODE_ENV=development bun run src/scripts/concurrently.ts",
		"build": "bun run typecheck && bun run db:m && next build && bun run startup",
		"start": "next start",
		"format": "biome format --write .",
		"db:g": "bun run --env-file=.env.local drizzle-kit generate --name",
		"db:m": "bun run --bun drizzle-kit migrate",
		"db:ui": "bun run --env-file=.env.local drizzle-kit studio",
		"startup": "bun -e '(await import(\"~/scripts/startup.ts\")).startup();'",
		"typecheck": "tsc --noEmit",
		"cleanup": "bun run src/scripts/cleanup.ts"
	},
	"dependencies": {
		"@grammyjs/auto-retry": "^2.0.2",
		"@grammyjs/i18n": "^1.0.2",
		"@grammyjs/ratelimiter": "^1.2.0",
		"@vercel/speed-insights": "^1.0.12",
		"canvas-confetti": "^1.9.3",
		"drizzle-orm": "^0.33.0",
		"envalid": "^8.0.0",
		"grammy": "^1.29.0",
		"next": "14.2.6",
		"next-intl": "^3.19.1",
		"postgres": "^3.4.4",
		"react": "^18",
		"react-dom": "^18"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/bun": "^1.1.8",
		"@types/canvas-confetti": "^1.6.4",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"autoprefixer": "^10.4.20",
		"drizzle-kit": "^0.24.2",
		"localtunnel": "^2.0.2",
		"postcss": "^8.4.44",
		"tailwindcss": "^3.4.10",
		"typescript": "^5"
	}
}
